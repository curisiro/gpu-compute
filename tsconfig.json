{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "noErrorTruncation": true,
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "newLine": "LF",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.bench.ts"]
}
